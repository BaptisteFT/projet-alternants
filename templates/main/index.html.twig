<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <link rel = "stylesheet" href = "css/simple.css"/>
    <title>Projet Alternant</title>
</head>
<body>
{% block body %}
  <header>
    <h1>Bienvenue sur l'index</h1>

    <nav>
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('create_user') }}"> Ajouter un utilisateur</a>
            <a href="{{ path('admin_panel') }}"> Administration de l'application</a>
            <a href="{{ path('excel_parse') }}"> Ajout des étudiants automatique</a>

        {% endif %}
        <a href="{{ path('my_profil', {userId: app.user.id}) }}">Mon profil</a>
        <a href="{{ path('app_logout') }}"> Déconnexion</a>
    </nav>
  </header>

<main>
    {% if is_granted('ROLE_ADMIN') %}
        <div>
            <h2>Liste des étudiants :</h2>

            {% if students is not empty %}
                <table>
                    <tr>
                        <th>Prénom</th>
                        <th>Nom</th>
                        <th>Adresse mail</th>
                        <th>Statut</th>
                        <th>Actions</th>
                    </tr>
                    {% for student in students %}
                        <tr>
                            <td>{{ student.firstName }}</td>
                            <td>{{ student.lastName }}</td>
                            <td>{{ student.userName }}</td>
                            <td>{{ student.status }}</td>
                            <td>
                                <a href="{{ path('update_user', {'userId': student.getId()}) }}"> Modifier</a>
                                <a href="{{ path('delete_user', {'userId': student.getId()}) }}"> Supprimer</a> <br>
                                {% if student.status == "CONTRACT_SEND" %}
                                    <a href="{{ path('contract_pdf', {'contractId': student.getContract().getId() }) }}"> Pré-convention</a> <br>
                                    <a href="{{ path('validate_work', {'studentId': student.getId() }) }}">Valider l'alternance</a>
                                {% elseif student.status == "WORKING" %}
                                    <a href="{{ path('view_work_contract', {'studentId': student.getId() }) }}"> Contrat d'alternance</a> <br>
                                {% endif %}

                            </td>
                        </tr>
                    {% endfor %}
                </table>
            {% else %}
                <p>Aucun étudiants</p>
            {% endif %}
        </div>
    {% endif %}

    {% if is_granted('ROLE_STUDENT') %}
        <div>
            <p>Bonjour {{ app.user.firstName }}</p>
            {% if app.user.status == "RESEARCH" %}
                <p>Vous êtes actuellement inscrit dans l'application, vous pouvez partager un lien de connexion avec une entreprise en  </p>
                <a href="{{ path('create_token', {userId: app.user.id}) }}"> cliquant-ici</a>
            {% endif %}
        </div>
    {% endif %}

    {% if is_granted('ROLE_COMPANY') %}
        <div>
            <p>Bonjour {{ app.user.firstName }}</p>

            <p>L'étudiant {{ tokenCreator.LastName }} {{ tokenCreator.firstName }} est l'auteur du lien d'activation, pour remplir sa convention veuillez</p>
            <a href="{{ path('contract_form', {'userId': tokenCreator.getId()}) }}"> cliquez ici</a>
        </div>
    {% endif %}

    {% if is_granted('ROLE_TEACHER') %}
        <div>
            <p>Bonjour {{ app.user.firstName }}</p>

            <h2>Liste des étudiants dont vous êtes le tuteur :</h2>

            {% if students is not empty %}
            <table>
                <tr>
                    <th>Prénom</th>
                    <th>Nom</th>
                    <th>Adresse mail</th>
                    <th>Actions</th>
                </tr>
                {% for student in students %}
                    <td>{{ student.firstName }}</td>
                    <td>{{ student.lastName }}</td>
                    <td>{{ student.userName }}</td>
                    <td></td>
                {% endfor %}
            </table>
            {% else %}
                <p>Aucun étudiants</p>
            {% endif %}
        </div>
    {% endif %}

</main>
{% endblock %}
</body>
</html>
