{% extends "base.html.twig" %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block header %}
    {{ parent() }}
{% endblock %}
{% block content %}
    <body class="bd">
    <main>
        <p class="grandTitre">Bienvenue sur l'index</p>

        {% if is_granted('ROLE_ADMIN') %}

        <div>
            <div class="form-inline" style="margin-left: 2%">
                <p class="title">Liste des étudiants :</p>
                <a class="btn border bttn2"  href="{{ path('create_user') }}" style="margin-left: 26%"> Ajouter un utilisateur</a>&nbsp;
                <a class="btn border bttn2"  href="{{ path('excel_parse') }}"> Ajout des étudiants automatique</a>

                {% if students is not empty %}
                    <table class="table caption-top table-hover table-light " style="width: 80%; margin-left: 10%;">
                        <thead class="table tableHeader" >

                        <tr>
                            <th scope="col">Prénom</th>
                            <th scope="col">Nom</th>
                            <th scope="col">Adresse mail</th>
                            <th scope="col">Statut</th>
                            <th scope="col">Actions</th>
                        </tr>

                        </thead>
                        <tbody>
                        {% for student in students %}

                            <tr class="tableContent">

                                <td>{{ student.firstName }}</td>
                                <td>{{ student.lastName }}</td>
                                <td>{{ student.userName }}</td>
                                <td>{{ student.status }}</td>

                                <td>
                                    <a href="{{ path('update_user', {'userId': student.getId()}) }}"> Modifier</a>&nbsp;
                                    <a href="{{ path('delete_user', {'userId': student.getId()}) }}"> Supprimer</a> <br>
                                    <a href="{{ path('my_profil', {'userId': student.getId()}) }}"> Voir le profil </a>
                                    {% if student.status == "CONTRACT_SEND" %}
                                        <a href="{{ path('contract_pdf', {'contractId': student.getContract().getId() }) }}">Pré-convention</a> <br>
                                        <a href="{{ path('validate_work', {'studentId': student.getId() }) }}">Valider l'alternance</a>
                                    {% elseif student.status == "WORKING" %}
                                        <a href="{{ path('view_work_contract', {'studentId': student.getId() }) }}">Contrat d'alternance</a> <br>
                                    {% endif %}

                                </td>
                            </tr>
                        {% endfor %}

                        </tbody>

                    </table>
                {% else %}
                    <p>Aucun étudiants</p>
                {% endif %}
            </div>
            {% endif %}

            {% if is_granted('ROLE_STUDENT') %}
                <div>

                    <p class="myLabel">{{ app.user.firstName }}, Bienvenue dans votre espace !</p>
                    {% if app.user.status == "RESEARCH" %}
                        <p style="font-family:'Trebuchet MS';">Vous êtes actuellement inscrit dans l'application, vous pouvez partager un lien de connexion avec une entreprise en

                            <a style="font-family:'Trebuchet MS';" href="{{ path('create_token', {userId: app.user.id}) }}"> cliquant-ici</a>

                        </p>
                    {% endif %}
                    {% if app.user.status == "CONTRACT_SEND" %}
                        <p>L'entreprise {{ app.user.company.firstName}} a remplie votre pré-convention</p>
                    {% endif %}
                    {% if app.user.status == "WORKING" %}
                        <p >vous pouvez renseigner votre fiche de poste en <a href="{{ path('create_jobinfo', {'studentId': app.user.id}) }}" >cliquant ici</a> </p>
                    {% endif %}
                </div>
            {% endif %}

            {% if is_granted('ROLE_COMPANY') %}
                <div>

                    <p class="myLabel">{{ app.user.firstName }}, Bienvenue dans votre espace !</p>

                    {% if researchStudents is not empty %}
                        {% for student in researchStudents %}
                            <p style="font-family:'Trebuchet MS';" >L'étudiant {{ student.LastName }} {{ student.firstName }} à partagé un lien d'activation avec vous, pour remplir sa pré-convention veuillez
                                <a style="font-family:'Trebuchet MS';" href="{{ path('contract_form', {'userId': student.getId()}) }}"> cliquez ici</a>
                            </p>


                        {% endfor %}
                    {% endif %}

                    {% if students is not empty %}

                        <p class="title" style="margin-left:0px">Etudiants alternants de l'entreprise :</p>

                        <table class="table caption-top table-hover table-light " style="width: 80%; margin-left: 10%;">
                            <thead class="table tableHeader" >


                            <tr>
                                <th scope="col">Prénom</th>
                                <th scope="col">Nom</th>
                                <th scope="col">Adresse mail</th>
                                <th scope="col">Statut</th>
                            </tr>

                            </thead>
                            <tbody>
                            <tr class="tableContent">

                                {% for student in students %}
                                <td>{{ student.firstName }}</td>
                                <td>{{ student.lastName }}</td>
                                <td>{{ student.userName }}</td>
                                <td>{{ student.status }}
                                    {% endfor %}
                            </tr>

                            </tbody>
                        </table>
                    {% endif %}
                </div>
            {% endif %}

            {% if is_granted('ROLE_TEACHER') %}
                <div>


                    <p class="myLabel">{{ app.user.firstName }}, Bienvenue dans votre espace !</p>
                    {% if students is not empty %}
                        <p class="title">Liste des étudiants dont vous êtes le tuteur :</p>

                        <table class="table caption-top table-hover table-light " style="width: 80%; margin-left: 10%;">
                            <thead class="table tableHeader" >

                            <tr>
                                <th scope="col">Prénom</th>
                                <th scope="col">Nom</th>
                                <th scope="col">Adresse mail</th>
                                <th scope="col">Actions</th>
                            </tr>

                            </thead>
                            <tbody>
                            {% for student in students %}
                                <tr class="tableContent">

                                    <td>{{ student.firstName }}</td>
                                    <td>{{ student.lastName }}</td>
                                    <td>{{ student.userName }}</td>
                                    <td>
                                        <a href="{{ path('create_review', {'teacherId': teacher.id, 'studentId': student.id}) }}">Créé une notation</a>
                                    </td>

                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <p class="myLabel">Vous n'avez aucun étudiant sous votre tutelle</p>

                    {% endif %}
                </div>
            {% endif %}
        </div>
    </main>

    </body>

{% endblock %}

{% block footer %}
    {{ parent() }}
{% endblock %}