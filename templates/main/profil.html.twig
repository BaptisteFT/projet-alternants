{% extends "base.html.twig" %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block header %}
    {{ parent() }}
{% endblock %}
{% block content %}
    <body class="bd" style="font-family:'Trebuchet MS'">
    <main>
        <div>
            <p class="grandTitre" style="text-align:left !important">Informations de l'utilisateur</p>
            {% if is_granted('ROLE_COMPANY') %}
                <form>
                    <div class="form-group row">
                        <label for="firstNameInput" class="col-sm-2 col-form-label myLabel">Nom de l'entreprise :</label>

                        <div class="col-sm-10">
                            <input type="text" readonly class="form-control-plaintext" id="firstNameInput" value="{{ user.firstName }}">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="emailInput" class="col-sm-2 col-form-label myLabel">Email :</label>

                        <div class="col-sm-10">
                            <input type="text" readonly class="form-control-plaintext" id="emailInput" value="{{ user.email }}">
                        </div>
                    </div>
                </form>
            {% else %}
            <form>
                <div class="form-group row">
                    <label for="lastNameInput" class="col-sm-2 col-form-label myLabel" >Nom :</label>

                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control-plaintext" id="lastNameInput" value="{{ user.lastName }}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="firstNameInput" class="col-sm-2 col-form-label myLabel">Prénom :</label>

                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control-plaintext" id="firstNameInput" value="{{ user.firstName }}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="emailInput" class="col-sm-2 col-form-label myLabel">Email :</label>

                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control-plaintext" id="emailInput" value="{{ user.email }}">
                    </div>
                </div>

            </form>
            {% endif %}
        </div>
        {% if is_granted('ROLE_STUDENT') %}
            {% if user.status == "RESEARCH" %}
            <div class="token-div">
                {% if token is not null %}

                <p class="grandTitre" style="text-align:left !important">lien de connexion des entreprise</p>
                <form>
                    <div class="form-group row">
                        <label for="urlInput" class="col-sm-2 col-form-label myLabel">Url :</label>
                        <div class="col-sm-10">
                            <input type="text" readonly class="form-control-plaintext" id="urlInput" value="{{ root_url }}{{ token.generateUrl }}">
                        </div>
                    </div>
                    <div class="form-group row">

                        <label for="dateInput" class="col-sm-2 col-form-label myLabel">Date d'expiration :</label>

                        <div class="col-sm-10">
                            <input type="text" readonly class="form-control-plaintext" id="dateInput" value="{{ token.expireDate|date("m/d/Y") }}">
                        </div>
                    </div>

                    <a class="btn bttn2" href="{{ path('create_token', {userId: user.id}) }}"> Générer</a>
                    <button class="btn btn-primary" id="copy" type="button">Copier</button>
                    {% else %}
                        <p>Aucun lien n'est actuellement générer, vous pouvez en générer en appuyant sur le button ci-dessous</p>
                        <a class="btn bttn2" href="{{ path('create_token', {userId: user.id}) }}"> Générer</a>

                    {% endif %}
                </form>
            </div>
                {% endif %}
        {% endif %}

        {% if user.studentToken is not null and user.studentToken.isActive == false %}
            <h2>lien de connexion de l'étudiant</h2>
                    <form>
                        <div class="form-group row">
                            <label for="studentUrlInput" class="col-sm-2 col-form-label myLabel">Url :</label>
                            <div class="col-sm-10">
                                <input type="text" readonly class="form-control-plaintext" id="studentUrlInput" value="{{ root_url }}{{ user.studentToken.generateUrl }}">
                            </div>
                        </div>
                        <div class="form-group row">

                            <label for="studentDateInput" class="col-sm-2 col-form-label myLabel">Date d'expiration :</label>

                            <div class="col-sm-10">
                                <input type="text" readonly class="form-control-plaintext" id="studentDateInput" value="{{ user.studentToken.expireDate|date("m/d/Y") }}">
                            </div>
                        </div>
                        <button class="btn btn-primary" id="student-copy" type="button">Copier</button>
                    </form>
        {% endif %}

        {% if user.status == "WORKING"%}
            {% if infos is not empty %}

                <p class="grandTitre" style="text-align:left !important">Fiche de Poste</p>

                <table class="table caption-top table-hover table-light " style="width: 80%; margin-left: 10%;">
                    <thead class="table tableHeader">

                    <tr>
                        <th scope="col">Eleve</th>
                        <th scope="col">Nom de l'entreprise</th>
                        <th scope="col">Contexte</th>
                        <th scope="col">Objectifs</th>
                        <th scope="col">Technologies utilisées</th>
                        <th scope="col">Actions</th>
                    </tr>
                    </thead>

                    {% for info in infos %}
                        <tr>
                            <td>{{ info.student.firstName }} {{ info.student.lastName }}</td>
                            <td>
                                {{ info.companyName }}
                            </td>
                            <td>{{ info.context }}</td>
                            <td>{{ info.goal }}</td>
                            <td>{{ info.technology }}</td>
                            <td>
                                <a href="{{ path('delete_jobinfo', {'jobinfoId': info.getId()}) }}"> Supprimer</a>
                                <a href="{{ path('update_jobinfo', {'jobinfoId': info.getId()}) }}"> Modifier</a>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            {% else %}
                {% if app.user.id == user.id %}
                <br>
                <p >vous pouvez renseigner votre fiche de poste en <a href="{{ path('create_jobinfo', {'studentId': user.id}) }}" >cliquant ici</a> </p>
                {% endif %}
            {% endif %}
        {% endif %}
        <script>
            var toCopy  = document.getElementById( 'urlInput' ),
                btnCopy = document.getElementById( 'copy' ),
                toCopy2 = document.getElementById( 'studentUrlInput' ),
                btnCopy2 = document.getElementById( 'student-copy' );

            if (toCopy != null && btnCopy != null){
                btnCopy.addEventListener( 'click', function(){
                    toCopy.select();
                    document.execCommand( 'copy' );
                    return false;
                } );
            }

            if (toCopy2 != null && btnCopy2 != null){
                btnCopy2.addEventListener('click', function (){
                    toCopy2.select();
                    document.execCommand( 'copy' );
                    return false;
                });
            }

        </script>
    </main>

    </body>

{% endblock %}
{% block footer %}
    {{ parent() }}
{% endblock %}