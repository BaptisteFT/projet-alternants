                        <a href="{{ path('delete-notification', {logId: log.id}) }}">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    {% else %}
        <span>Pas de notifications</span>
    {% endif %}

{% endblock %}