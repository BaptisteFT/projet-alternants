{% block content %}
    <body>
    <h2>Notifications: </h2>

    {% if backlog is not empty %}
        <table class="table caption-top table-hover table-light">
            <thead class="table table-header">

            <tr>
                <th scope="col">Description</th>
                <th scope="col">Type</th>
                <th scope="col">Actions</th>
            </tr>

            </thead>
            {% for log in backlog %}
                <tr>

                    <td>{{ log.text }}</td>
                    <td>{{ log.type }}</td>

                    <td>
                        <a href="{{ path('delete-notification', {logId: log.id}) }}">Archiver</a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    {% else %}

        <span >Aucune notification Ã  afficher </span>
