{% extends "base.html.twig" %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block header %}
    {{ parent() }}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel = "stylesheet" type="text/css" href = "../css/my_CSS.css"/>
{% endblock %}
{% block content %}
<body style="background-color:rgb(221, 247, 242);">
<div style=" width: 60%;margin-left: 20%;font-family:'Trebuchet MS';font-weight: bold;">
<main>
    <p style="font-family:'Trebuchet MS';font-size:18px; ">Votre compte a bien été activé, nous aimerions en savoir plus sur votre entreprise avant de remplir la convention.</p>
    <br>
    <p style="  color: #0B317D; font-size: 20px; font-weight: bold;font-family:'Trebuchet MS';text-align: center" >Informations sur l'entreprise :
    </p>
    {{ form_start(companyForm) }}
    <div class="mb-3">
        {{ form_row(companyForm.email, {label: "Adresse e-mail de l'entreprise",value: ""}) }}
        {{ form_row(companyForm.firstName, {label: "Nom de l'entreprise"}) }}
        {{ form_row(companyForm.plainPassword, {label: "Mot de passe du compte"}) }}
    </div>
    <button type="submit" class="btn" style="float : right;font-weight: bold; color: white; font-size: 16px;font-family:'Trebuchet MS'; background-color : #0B317D;">Valider</button>

    {{ form_end(companyForm) }}
</main>
</div>
</body>
{% endblock %}
{% block footer %}
    {{ parent() }}
{% endblock %}