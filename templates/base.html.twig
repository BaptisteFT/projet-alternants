                <div class="container-fluid">
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            {% if is_granted('ROLE_USER') %}
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="{{ path('app_index_index') }}">Index</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('my_profil', {userId: app.user.id}) }}">Profil</a>
                                </li>

                                {% if is_granted('ROLE_ADMIN') %}
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            Admin
                                        </a>
                                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                            <li><a class="dropdown-item" href="{{ path('create_user') }}"> Ajouter un utilisateur</a></li>
                                            <li><a class="dropdown-item" href="{{ path('admin_panel') }}"> Panneau d'administration</a></li>
                                            <li><a class="dropdown-item" href="{{ path('excel_parse') }}"> Ajout des étudiants automatique</a></li>
                                        </ul>
                                    </li>
                                {% endif %}

                                {% if is_granted('ROLE_STUDENT') %}
                                    <li class="nav-item">
                                        {# <a class="nav-link active" href="{{ path('review', {userId: app.user.id}) }}">Evaluations</a> #}
                                    </li>
                                {% endif %}

                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
                                </li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </nav>
        {% endblock %}</div>
