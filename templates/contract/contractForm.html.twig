{% extends "base.html.twig" %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block head %}
    {{ parent() }}


{% endblock %}
{% block header %}
    {{ parent() }}

{% endblock %}
{% block content %}
    <body style="background-color:rgb(221, 247, 242)">

    <div style=" width: 60%;margin-left: 20%;font-family:'Trebuchet MS';font-weight: bold;">
        <main>
            <p style="  color: #0B317D; font-size: 30px; font-weight: bold;font-family:'Trebuchet MS';text-align: center" >Formulaire de préconvention
            </p>

            {{ form_start(form) }}
            <div class="mb-3">
                <p style="color: black;font-size: 25px; font-family:'Trebuchet MS';">Informations :</p>

                {{ form_row(form.socialReason, {label: 'Raison Sociale'}) }}
                {{ form_row(form.siretNumber, {label: 'Siret'}) }}
                {{ form_row(form.activity, {label: 'Activité'}) }}
                {{ form_row(form.phoneNumber, {label: 'Numero de téléphone'}) }}
                {{ form_row(form.contractEmail, {label: 'Email pour la convention'}) }}


                <p style="color: black;font-size: 25px; font-family:'Trebuchet MS';">Adresse :</p>

                {{ form_row(form.locationStreet, {label: 'Rue'}) }}
                {{ form_row(form.locationCity, {label: 'Ville'}) }}
                {{ form_row(form.postalCode, {label: 'Code Postal'}) }}


                <p style="color: black;font-size: 25px; font-family:'Trebuchet MS';">Représentant de l'entreprise :</p>

                {{ form_row(form.representativeCivility, {label: 'Civilité'}) }}
                {{ form_row(form.representativeFirstName, {label: 'Prénom'}) }}
                {{ form_row(form.representativeLastName, {label: 'Nom'}) }}
                {{ form_row(form.representativeRole, {label: 'Fonction'}) }}
                {{ form_row(form.representativeEmail, {label: 'Email'}) }}


                <p style="color: black;font-size: 25px; font-family:'Trebuchet MS';">Lieux d'éxécution du contrat en alternance (si différent) :</p>

                {{ form_row(form.otherSocialReason, {label: 'Raison Sociale'}) }}
                {{ form_row(form.otherLocationStreet, {label: 'Rue'}) }}
                {{ form_row(form.otherLocationCity, {label: 'Ville'}) }}
                {{ form_row(form.otherPhoneNumber, {label: 'Numero de téléphone'}) }}
                {{ form_row(form.otherPostalCode, {label: 'Code Postal'}) }}


                <p style="color: black;font-size: 25px; font-family:'Trebuchet MS';">Type de contrat :</p>

                {{ form_row(form.workerRole, {label: "Fonction de l'alternant"}) }}
                {{ form_row(form.contractType, {label: 'Type'}) }}
                {{ form_row(form.contractStartDate, {label: 'Date de début'}) }}
                {{ form_row(form.contractEndDate, {label: 'Date de fin'}) }}


                <p style="color: black;font-size: 25px; font-family:'Trebuchet MS';">Tuteur Professionnel ou Maitre d'apprentissage :</p>

                {{ form_row(form.tutorCivility, {label: 'Civilité'}) }}
                {{ form_row(form.tutorFirstName, {label: 'Prénom'}) }}
                {{ form_row(form.tutorLastName, {label: 'Nom'}) }}
                {{ form_row(form.tutorPhoneNumber, {label: 'Numero de téléphone'}) }}
                {{ form_row(form.tutorEmail, {label: 'Email'}) }}
                {{ form_row(form.tutorRole, {label: 'Fonction du tuteur'}) }}

                <button class="btn" type="submit" style="float : right;font-weight: bold; color: white; font-size: 16px;font-family:'Trebuchet MS'; background-color : #0B317D;
">Envoyer</button>

                <br>
            </div>

            {{ form_end(form) }}
        </main>
    </div>
    </body>
{% endblock %}

