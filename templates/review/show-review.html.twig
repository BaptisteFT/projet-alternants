{% extends "base.html.twig" %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block header %}
    {{ parent() }}
{% endblock %}
{% block content %}
    <main>
        <h2>Informations de l'utilisateur</h2>
        {% if is_granted('ROLE_TEACHER') %}
            <table>
                <tr>
                    <th>Eleve</th>
                    <th>Date</th>
                    <th>Note</th>
                    <th>Appréciation</th>
                </tr>
                {% for rev in reviews %}
                    <tr>
                        <td>{{ rev.student.firstName }} {{ rev.student.lastName }}</td>
                        <td>{{ rev.date|date("m/d/Y") }}</td>
                        <td>
                            {{ rev.rating }}
                        </td>
                        <td>{{ rev.content }}</td>
                    </tr>
                {% endfor %}
            </table>
        {% elseif is_granted('ROLE_STUDENT') %}
            <table>
                <tr>
                    <th>Tuteur</th>
                    <th>Date</th>
                    <th>Note</th>
                    <th>Appréciation</th>
                </tr>
                {% for rev in reviews %}
                    <tr>
                        <td>{{ rev.author.firstName }} {{ rev.author.lastName }}</td>
                        <td>{{ rev.date|date("m/d/Y h:m") }}</td>
                        <td>
                            {{ rev.rating }}
                        </td>
                        <td>{{ rev.content }}</td>
                    </tr>
                {% endfor %}
            </table>
        {% elseif is_granted('ROLE_ADMIN') %}
            <table>
                <tr>
                    <th>Eleve</th>
                    <th>Tuteur</th>
                    <th>Date</th>
                    <th>Note</th>
                    <th>Appréciation</th>
                </tr>
                {% for rev in reviews %}
                    <tr>
                        <td>{{ rev.student.firstName }} {{ rev.student.lastName }}</td>
                        <td>{{ rev.author.firstName }} {{ rev.author.lastName }}</td>
                        <td>{{ rev.date|date("m/d/Y h:m") }}</td>
                        <td>
                            {{ rev.rating }}
                        </td>
                        <td>{{ rev.content }}</td>
                        <td>
                            <a href="{{ path('delete_review', {'reviewId': rev.getId()}) }}"> Supprimer</a>
                            <a href="{{ path('update_review', {'reviewId': rev.getId()}) }}"> Modifier</a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        {% endif %}
    </main>
{% endblock %}
